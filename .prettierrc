{
  "overrides": [
    {
      "files": "*.{js,ts}",
      "options": {
        "singleQuote": true,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ".*",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    }
  ]
}
